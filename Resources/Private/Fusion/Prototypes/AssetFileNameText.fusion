prototype(Jonnitto.AssetList:FileNameText) < prototype(Neos.Fusion:Array) {
    headline = Neos.Fusion:Tag {
        tagName = ${Configuration.setting('Jonnitto.AssetList.text.headlineTag')}
        attributes.class = Neos.Fusion:RawArray {
            text = ${namespace + '--headline'}
        }
        content = Jonnitto.AssetList:Title
    }

    action = Jonnitto.AssetList:AssetAction

    @if.hasAsset = ${asset}
}
