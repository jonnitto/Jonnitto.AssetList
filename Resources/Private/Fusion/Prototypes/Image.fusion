prototype(Jonnitto.AssetList:Image) < prototype(Carbon.Image:Tag) {
    asset = ${asset}
    @if.hasImageOrBackend = ${this.asset ? true : false}

    alternativeText = Jonnitto.AssetList:Title
    maximumWidth = ${Configuration.setting('Jonnitto.AssetList.thumbnail.maximumWidth')}

    class = ${namespace + '--img'}

    // Backward compatibility for Carbon.Image 1.x
    additionalClass = ${this.class}
}
